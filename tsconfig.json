{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"],
      },
      "outDir": "./dist/",
      "lib": ["es6", "dom"],
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "noImplicitThis": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src"
    ]
}